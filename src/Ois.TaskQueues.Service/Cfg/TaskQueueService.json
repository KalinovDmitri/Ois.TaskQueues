{
  // таймаут выполнения задачи в секундах; по умолчанию - 30 секунд
  "ExecutionTimeout": "00:00:30",

  // порт для подключения клиентов
  "ClientServicePort": 8788,

  // порт для подключения воркеров
  "WorkerServicePort": 8789,

  // начальное количество запускаемых воркеров, если их количество равно нулю
  "WorkersInitialCount": 1,

  // путь к файлу запуска нового воркера
  "WorkersRunFile": "Balancing\\RunWorker.cmd",

  // путь к файлу останова воркера
  "WorkersStopFile": "Balancing\\StopWorker.cmd",

  // время ожидания перед первым запуском нового воркера; значение по умолчанию - 5 секунд
  "RunTimerDueTime": "00:00:05",

  // интервал между запусками новых воркеров; значение по умолчанию - 20 секунд
  "RunTimerInterval": "00:00:20",

  // время ожидания перед первым остановом воркера; значение по умолчанию - 20 секунд
  "StopTimerDueTime": "00:00:20",

  // интервал между остановами воркеров; значение по умолчанию - 20 секунд
  "StopTimerInterval": "00:00:20"
}